<dl>
  <dt>
    <%= button_to 'quick mail', mail_path(0) %>
  </dt>
  <dd>
    &#x2615; doesn't sleep &#x2615;
  </dd>
  <% [5, 10, 30, 60].each do |sec| %>
    <dt>
      <%= button_to "sleep #{sec} then mail", mail_path(sec) %>
    </dt>
    <dd>
      sleeps <%= sec %> before sending mail
    </dd>
  <% end %>
</dl>
